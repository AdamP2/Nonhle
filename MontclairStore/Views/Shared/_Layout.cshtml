<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title FRESHLY BAKED BAKERY STORE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-2.2.3/pdfmake-0.1.18/dt-1.10.12/af-2.1.2/b-1.2.2/b-colvis-1.2.2/b-html5-1.2.2/b-print-1.2.2/fc-3.2.2/fh-3.1.2/kt-2.1.3/r-2.1.0/rr-1.1.2/sc-1.4.2/se-1.2.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-2.2.3/pdfmake-0.1.18/dt-1.10.12/af-2.1.2/b-1.2.2/b-colvis-1.2.2/b-html5-1.2.2/b-print-1.2.2/fc-3.2.2/fh-3.1.2/kt-2.1.3/r-2.1.0/rr-1.1.2/sc-1.4.2/se-1.2.0/datatables.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#00695c; color:white ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FRESHLY BAKED BAKERY", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")"> <i class="fa fa-home"></i> Home</a></li>
                    <li><a href="@Url.Action("Contact", "Home")"> <i class="fa fa-phone-square"></i>Contact</a></li>
                    <li><a href="@Url.Action("Gallery", "Home")"> <i class="fa fa-birthday-cake"></i>Gallery</a></li>
                    <li class="dropdown">
                        <a href="@Url.Action("ShoppingCart","Shopping")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-shopping-cart"></span> Cart (@Html.Action(actionName: "countCartItems", controllerName: "Shopping"))<span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                            <li class="divider"></li>
                            <li>
                                <a class="btn btn-default" href="@Url.Action("ShoppingCart", "Shopping")">
                                    <i class="fa fa-shopping-cart"></i> View Cart
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-default" href="@Url.Action("Index","Shopping")">
                                    <i class="fa fa-list"></i> Shop More
                                </a>
                            </li>
                        </ul>
                    </li>
                    @if (User.IsInRole("SuperAdmin"))
            {
                    <li class="dropdown">
                        <a href="@Url.Action("Index","Items")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-shopping-cart"></span> Manage Items<span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                            <li>
                                <a class="btn btn-default" href="@Url.Action("Create", "Categories")">
                                    <i class="fa fa-plus"></i> Add New Category
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-default" href="@Url.Action("Index","Categories")">
                                    <i class="fa fa-list"></i> View all Categories
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a class="btn btn-default" href="@Url.Action("Create", "Items")">
                                    <i class="fa fa-plus"></i> Add New Item
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-default" href="@Url.Action("Index","Items")">
                                    <i class="fa fa-list"></i> View all Items
                                </a>
                            </li>
                        </ul>
                    </li>
            }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Freshly Baked Bakery </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
